@model int?
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Customers</h2>

<table id="customers" class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th> </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts{
    
    <script>

        var table = $(document).ready(function () {
            $("#customers").DataTable({
                ajax: {
                    url: "api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "email"
                    },
                    {
                        data: "phone"
                    },
                    {
                        data: "id",
                        render: function (data, type, customer) {
                            //return "<button class='btn-link js-assign' data-customer-id=" + data + " >View/Assign Policie(s)</button>";
                            return "<a href='customers/edit/" + data + "/" + customer.name + "'>View/Assign Policie(s)</a>";
                        }
                    }
                ]
            });
        });


    </script>
    
    }